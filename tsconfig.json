{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": false,
        "declaration": true,
        "removeComments": false,
        "types": [ "node", "reflect-metadata"],
        "outDir": "lib"
    },
    "files": ["src/index.ts",
      "./src/interfaces.ts"
    ],
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
